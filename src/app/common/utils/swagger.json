{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "REST API for dynamic form",
    "description": "Dynamic form api",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Session",
      "description": "API for users sign-in the system"
    },
    {
      "name": "Columns",
      "description": "API for create extra column"
    },
    {
      "name": "Forms",
      "description": "API for create a form with a form name And (extra column)"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create new user in system",
        "description": "New description in bangla\n new another line",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/UserModel"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/UserModel"
            }
          }
        }
      }
    },
    "/users/otp_verify": {
      "put": {
        "tags": ["Users"],
        "summary": "Create new user in system",
        "description": "New description in bangla\n new another line",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/OtpModel"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Otp updated",
            "schema": {
              "$ref": "#/definitions/OtpModel"
            }
          }
        }
      }
    },

    "/sessions": {
      "post": {
        "tags": ["Session"],
        "summary": "Create new user in system",
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/SessionModel"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/SessionModel"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserModel": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "Md Tajal Islam"
        },
        "email": {
          "type": "string",
          "example": "mdtajalislam1189@gmail.com"
        },
        "phnNo": {
          "type": "string",
          "example": "01883950739"
        },
        "password": {
          "type": "string",
          "example": "123456",
          "required": true
        },
        "passwordConfirmation": {
          "type": "string",
          "examples": "123456"
        }
      }
    },
    "OtpModel": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "example": "mdtajalislam1189@gmail.com"
        },
        "phnNo": {
          "type": "string",
          "example": "01883950739"
        },
        "verificationCode": {
          "type": "number",
          "example": "123456"
        }
      }
    },
    "SessionModel": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "required": true,
          "example": "mdtajalislam1189@gmail.com"
        },
        "password": {
          "type": "string",
          "required": true,
          "example": "123456"
        }
      }
    }
  }
}
