{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "REST API for dynamic form",
    "description": "Dynamic form api",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    },
    {
      "name": "Session",
      "description": "API for users sign-in the system"
    },
    {
      "name": "Columns",
      "description": "API for create extra column"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users"],
        "summary": "Create new user in system",
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/UserModel"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/UserModel"
            }
          }
        }
      }
    },

    "/sessions": {
      "post": {
        "tags": ["Session"],
        "summary": "Create new user in system",
        "description": "Create new user in system",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we want to create",
            "schema": {
              "$ref": "#/definitions/SessionModel"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user is created",
            "schema": {
              "$ref": "#/definitions/SessionModel"
            }
          }
        }
      }
    },
    "/columns": {
      "post": {
        "tags": ["Columns"],
        "summary": "Create extra column for new form",
        "description": "Create colum for form",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Extra column create for form",
            "schema": {
              "$ref": "#/definitions/ColumnModel"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New Colum is created",
            "schema": {
              "$ref": "#/definitions/ColumnModel"
            }
          }
        }
      },
      "get": {
        "tags": ["Columns"],
        "summary": "get all extra column list",
        "description": "all extra column list",
        "parameters": [],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of colum for form",
            "schema": {
              "$ref": "#/definitions/ColumnModel"
            }
          }
        }
      }
    },
    "/columns/{columnsId}": {
      "put": {
        "tags": ["Columns"],
        "summary": "Create extra column for new form",
        "description": "Create colum for form",
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "Extra column create for form",
            "schema": {
              "$ref": "#/definitions/ColumnModel"
            }
          },
          {
            "name": "columnsId",
            "in": "path",
            "description": "columnsId of the column",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New Colum is created",
            "schema": {
              "$ref": "#/definitions/ColumnModel"
            }
          }
        }
      },
      "get": {
        "tags": ["Columns"],
        "summary": "get a single extra column list for a form",
        "description": "a single column list",
        "parameters": [
          {
            "name": "columnsId",
            "in": "path",
            "description": "columnsId of the column",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List of colum for a single form",
            "schema": {
              "$ref": "#/definitions/ColumnModel"
            }
          }
        }
      },
      "delete": {
        "tags": ["Columns"],
        "summary": "Delete  by columnsId",
        "parameters": [
          {
            "name": "columnsId",
            "in": "path",
            "description": "columnsId of the columns",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserModel": {
      "required": ["name", "email", "password", "passwordConfirmation"],
      "properties": {
        "name": {
          "type": "string",
          "examples": ["Md Tajal Islam"]
        },
        "email": {
          "type": "string",
          "examples": ["string@gmail.com"]
        },
        "password": {
          "type": "string",
          "examples": ["123456"]
        },
        "passwordConfirmation": {
          "type": "string",
          "examples": ["123456"]
        }
      }
    },

    "SessionModel": {
      "required": ["email", "password"],
      "properties": {
        "email": {
          "type": "string",
          "examples": ["string@gmail.com"]
        },
        "password": {
          "type": "string",
          "examples": ["123456"]
        }
      }
    },

    "ColumnModel": {
      "required": ["formName"],
      "properties": {
        "formName": {
          "type": "string",
          "examples": ["New Form"]
        },
        "columnOne": {
          "type": "object",
          "examples": {
            "columnName": "countryName",
            "assignment": "auto",
            "dataType": "string",
            "maxLength": "40",
            "minLength": "4",
            "bSearch": "true",
            "bDisplay": "true",
            "bDisabled": "true",
            "evaluationFormula": "true"
          }
        },
        "columnTwo": {
          "type": "object",
          "examples": {
            "columnName": "districtName",
            "assignment": "manual",
            "dataType": "string",
            "maxLength": "40",
            "minLength": "4",
            "bSearch": "true",
            "bDisplay": "true",
            "bDisabled": "true",
            "evaluationFormula": "true"
          }
        }
      }
    }
  }
}
